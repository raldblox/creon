###############################################################################
### CREON - Local Environment Template                                      ###
### Copy to .env and fill values before local simulation/deployment         ###
###############################################################################

# CRE CLI
CRE_ETH_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
CRE_TARGET=staging-settings

# MongoDB Atlas URI (used by Next.js /api/db route)
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@creon-store.rkjntuf.mongodb.net/?appName=creon-store
MONGODB_DATABASE=creon_store
MONGODB_MAX_RETRIES=3
# Workflow -> Next.js bridge endpoint
MONGODB_DB_API_URL=http://localhost:3000/api/db
MONGODB_DB_API_KEY=

# OpenAI classification (workflow/integration/openai.ts)
# Set false for DB-only testing (no OpenAI key required for createListing).
ENABLE_POLICY_CHECKS=false
OPENAI_API_KEY=<openai-api-key>
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Chain integration defaults (workflow/integration/chain.ts)
CHAIN_GAS_LIMIT=1000000
ENTITLEMENT_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
AGENT_WALLET_ADDRESS=0x0000000000000000000000000000000000000000
COMMERCE_CHAIN_SELECTOR_NAME=ethereum-testnet-sepolia-base-1
COMMERCE_USDC_ADDRESS=0x0000000000000000000000000000000000000000
